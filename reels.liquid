<script>
  $(document).ready(function(){
       function mute_btn(){
            $('.video-mute').each(function() {
                  $(this).on('click', function() {
                      var video = $(this).parent().find('video')[0]; // Get the first video element

                      if (video) {
                          video.muted = !video.muted;
                          if (video.muted) {
                              $(this).html('<i class="fa fa-volume-off" aria-hidden="true"></i>');
                          } else {
                              $(this).html('<i class="fa fa-volume-up" aria-hidden="true"></i>');
                          }
                      }
                  });
              });
          }
          // Function to stop all videos
          function stopAllVideos() {
            $('.slick-slide video').each(function() {
              $(this).get(0).pause();
              $(this).get(0).currentTime = 0; // Reset video
            });
          }

        $('.swiper-wrapper').slick({
            vertical: true,        // Vertical sliding
            slidesToShow: 1,       // Show one slide at a time
            slidesToScroll: 1,     // Scroll one slide at a time
            arrows: true,         // Disable navigation arrows
            dots: false,           // Disable dots
            infinite: true,        // Optional: enables infinite scrolling
            speed: 500,            // Adjust the speed for smooth scrolling
            cssEase: 'ease-in-out', // Smooth transition
            swipe: true,           // Enable swiping
            touchThreshold: 5,     // Adjust sensitivity for swiping
            verticalSwiping: true
        });

        mute_btn();


        // Play video on the first slide when the page loads
        let firstSlideVideo = $('.slick-slide[data-slick-index="0"] video');
        if (firstSlideVideo.length > 0) {
            firstSlideVideo.parent().parent().find('.video-mute').html('<i class="fa fa-volume-off" aria-hidden="true"></i>');
            firstSlideVideo.get(0).play().catch(error => {
                console.error('Error playing first slide video:', error);
            });
        }

        // Play video on the current slide and pause others
        $('.swiper-wrapper').on('beforeChange', function(event, slick, currentSlide, nextSlide) {
          stopAllVideos(); // Stop all videos before slide changes
          let nextVideo = $('.slick-slide[data-slick-index="' + nextSlide + '"] video');
          if (nextVideo.length > 0) {
            nextVideo.get(0).muted = false; // Ensure the video is not muted
            nextVideo.get(0).play().catch(error => {
                // Handle the error if autoplay is blocked
                console.error('Error playing video:', error);
                // Optionally, you can show a button for user interaction to play video with sound
            });
          }
        });

        // Preload videos to improve performance
        $('video').each(function() {
          // $(this).attr('preload', 'metadata'); // Preload video in the background
        });

        // Play/Pause video on click
        $('video').on('click', function() {
          if (this.paused) {
            this.play();
          } else {
            this.pause();
          }
        });

        // Initial video play when the page loads
        let initialVideo = $('.slick-slide.slick-current video');
        if (initialVideo.length > 0) {
          initialVideo.get(0).play();
        }
      });
</script>

